{
  "dataset_reader": {
    "type": "seq2seq",
    "lazy":true
  },
  "train_data_path": "data/translation.tsv",
  "model": {
    "type": "simple_seq2seq",
    "source_embedder": {
      "tokens": {
        "type": "embedding",
        "embedding_dim": 200
      }
    },
    "encoder": {
        "type":"lstm"
        "input_size": 200,
        "hidden_size": 200,
        "num_layers": 2
    },
    "max_decoding_steps":100, 
    "scheduled_sampling_ratio":0.0
    "adaptive_softmax_cutoff": [1000]
    },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["source_tokens", "num_tokens"], ["target_tokens", "num_tokens"]],
    "batch_size": 64
  },
  "trainer": {
    "num_epochs": 5,
    "patience": 2,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "optimizer": {
      "type": "adagrad"
    }
  }
}
